{
  "tabWidth": 4,
  "printWidth": 80,
  "endOfLine": "lf",
  "semi": true,
  "singleQuote": false,
  "trailingComma": "none",
  "arrowParens": "avoid", 
  "importOrder": [
    "^[^.]+$", 
    ".(css|scss)$",
    "^[.]{1,2}/" 
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "prettier-plugin-css-order",
    "@trivago/prettier-plugin-sort-imports"
  ]
}
